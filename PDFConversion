#NOTE THIS IS R NOT PYTHON
convertAllPDFs = function(fileLocation){
  #Required libraries
  require(utils)
  require(pdftools)
  
  #set a workspace
  setwd(fileLocation)
  #Deals with where to find the files and which files to include
  #Get a file path with what you want to convert
  filesToAnalyze = list.files(fileLocation)
  numberOfFiles = length(filesToAnalyze)
  
  #This actually cycles through all the data to do the PDF conversion
  for (i in 1:numberOfFiles) {
    ext = substr(filesToAnalyze[i], nchar(filesToAnalyze[i])-2, nchar(filesToAnalyze[i])) #This just gets the extension of the piece
    #Tests if its the file type we want
    if (ext == "PDF" ||ext == "pdf") {  #if the file is a PDF it converts it 
      fullFileName = paste(fileLocation, filesToAnalyze[i], sep = "/", collapse = "")
      changeFileName = paste("NEWFILENAMEHERE", substr(filesToAnalyze[i], 0, nchar(filesToAnalyze[i])-4), ".tiff", sep = "", collapse = "") # this is optional
      pdf_convert(fullFileName, format = "tiff", pages = 1, filenames = changeFileName, dpi = 400, antialias = TRUE, verbose = TRUE)    
    } else {
      print ("It wasn't my type")
    }
  }
  return ("I did the thing")
}
